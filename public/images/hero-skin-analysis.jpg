<?xml version="1.0" encoding="UTF-8"?>
<svg width="800" height="400" viewBox="0 0 800 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="800" height="400" fill="url(#gradient)"/>

  <!-- Gradient Definition -->
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Skin Analysis Visualization -->
  <circle cx="150" cy="200" r="80" fill="rgba(255,255,255,0.2)" stroke="rgba(255,255,255,0.4)" stroke-width="2"/>
  <circle cx="150" cy="200" r="60" fill="rgba(255,255,255,0.1)" stroke="rgba(255,255,255,0.3)" stroke-width="1"/>
  <circle cx="150" cy="200" r="40" fill="rgba(255,255,255,0.15)" stroke="rgba(255,255,255,0.2)" stroke-width="1"/>

  <!-- Analysis Rays -->
  <g opacity="0.6">
    <line x1="150" y1="80" x2="150" y2="100" stroke="white" stroke-width="3" stroke-linecap="round"/>
    <line x1="220" y1="200" x2="200" y2="200" stroke="white" stroke-width="3" stroke-linecap="round"/>
    <line x1="150" y1="320" x2="150" y2="300" stroke="white" stroke-width="3" stroke-linecap="round"/>
    <line x1="80" y1="200" x2="100" y2="200" stroke="white" stroke-width="3" stroke-linecap="round"/>
  </g>

  <!-- Medical Cross -->
  <g transform="translate(400, 150)">
    <rect x="40" y="20" width="20" height="60" fill="rgba(255,255,255,0.8)" rx="2"/>
    <rect x="20" y="40" width="60" height="20" fill="rgba(255,255,255,0.8)" rx="2"/>
  </g>

  <!-- Skin Layers Visualization -->
  <g transform="translate(600, 200)">
    <ellipse cx="0" cy="0" rx="50" ry="30" fill="rgba(255,182,193,0.3)" stroke="rgba(255,182,193,0.5)" stroke-width="1"/>
    <ellipse cx="0" cy="0" rx="45" ry="25" fill="rgba(255,160,122,0.3)" stroke="rgba(255,160,122,0.5)" stroke-width="1"/>
    <ellipse cx="0" cy="0" rx="40" ry="20" fill="rgba(250,128,114,0.3)" stroke="rgba(250,128,114,0.5)" stroke-width="1"/>
  </g>

  <!-- Text -->
  <text x="400" y="350" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="white">
    Advanced Skin Analysis Technology
  </text>
</svg>
